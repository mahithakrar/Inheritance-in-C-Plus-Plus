#include <iostream>
using namespace std;

// Base class
class Person {
public:
    string name;
    int age;

    void inputDetails() {
        cout << "Enter Name: ";
        cin >> name;
        cout << "Enter Age: ";
        cin >> age;
    }

    void displayDetails() {
        cout << "Name: " << name << ", Age: " << age << endl;
    }
};

// Derived class 1
class Student : public Person {
    int rollNo;
public:
    void inputStudent() {
        inputDetails();
        cout << "Enter Roll Number: ";
        cin >> rollNo;
    }

    void displayStudent() {
        displayDetails();
        cout << "Roll Number: " << rollNo << endl;
    }
};

// Derived class 2
class Teacher : public Person {
    string subject;
public:
    void inputTeacher() {
        inputDetails();
        cout << "Enter Subject: ";
        cin >> subject;
    }

    void displayTeacher() {
        displayDetails();
        cout << "Subject: " << subject << endl;
    }
};

// Derived class 3
class Staff : public Person {
    string department;
public:
    void inputStaff() {
        inputDetails();
        cout << "Enter Department: ";
        cin >> department;
    }

    void displayStaff() {
        displayDetails();
        cout << "Department: " << department << endl;
    }
};

int main() {
    cout << "Enter Student Information:" << endl;
    Student s;
    s.inputStudent();
    cout << "\nStudent Details:" << endl;
    s.displayStudent();

    cout << "\nEnter Teacher Information:" << endl;
    Teacher t;
    t.inputTeacher();
    cout << "\nTeacher Details:" << endl;
    t.displayTeacher();

    cout << "\nEnter Staff Information:" << endl;
    Staff st;
    st.inputStaff();
    cout << "\nStaff Details:" << endl;
    st.displayStaff();

    return 0;
}

//Output:
//Enter Teacher Information:
//Enter Name: Megha
//Enter Age: 35
//Enter Subject: Maths
//
//Teacher Details:
//Name: Megha, Age: 35
//Subject: Maths

//Enter Staff Information:
//Enter Name: Prateek
//Enter Age: 41
//Enter Department: ENTC

//Staff Details:
//Name: Prateek, Age: 41
//Department: ENTC
